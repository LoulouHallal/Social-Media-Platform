generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id")
  username  String    @unique
  avatar    String?
  posts     Post[]
  followers String[]
  createdAt DateTime  @default(now())
}

model Post {
  id        String   @id @default(auto()) @map("_id")
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}